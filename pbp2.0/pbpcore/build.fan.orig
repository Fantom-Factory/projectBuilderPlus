class Build : build::BuildPod
{
  new make()
  {
    podName = "pbpcore"
    summary = "Core data-types for projectBuilder plus"
    version = Version([1,0,0])
    depends = ["sys 1.0+",
               "concurrent 1.0+",
               "haystack 1.0+",
               "util 1.0+",
               "web 1.0+",
               "xml 1.0+",
               "luceneCore 3.6.1+"
               ]

    javaDirs = [`java/Indexer/`]
    srcDirs = [`fan/`,
               `fan/Actor/`,
               `fan/Actor/configs/`,
               `fan/Change/`,
               `fan/Database/`,
               `fan/Database/config/`,
               `fan/Diagnostics/`,
               `fan/Project/`,
               `fan/Record/`,
               `fan/Record/configs/`,
               `fan/Misc/`,
               `fan/Indexer/`,
               `fan/Templateing/`,
               `fan/Templateing/donttouch/`,
               `fan/Templateing/config/`,
               `fan/File/`,
               `fan/Conn/`,
               `fan/Tree/`,
               `fan/Tag/`,
               `test/`
               ]

  }

}

